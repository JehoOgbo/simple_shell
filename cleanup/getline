#include "header.h"

/**
 * _getline - reads a line from stdin until a newline character is found
 *
 * Return: number of characters read
 */
int _getline(char **buff)
{
	int i = 0;
	size_t nchar;
	char buf[1024];

	nchar = 1024;
	*buff = NULL;
	while (nchar == 1024)
	{
		nchar = read(1, buf, nchar);
		printf("%ld\n", nchar);
		*buff = malloc((nchar + 1) * sizeof(char));
		/*buff = realloc(*buff, (1024 * i + (nchar) * sizeof(char)));*/
		memset(*buff, 0, nchar + 1);
		strncpy(*buff, buf, nchar);
		/*buff[nchar - 1] = '\0';*/
		/*(buff + nchar) = '\0';*/
		i++;
	}
	/*buff[nchar - 1] = '\0';*/
	return (1024 * (i - 1) + nchar);
}
